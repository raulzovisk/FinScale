{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "moduleResolution": "node",
        "lib": [
            "ES2022"
        ],
        "outDir": "./dist-server",
        "rootDir": ".",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "declaration": false,
        "noEmit": false
    },
    "include": [
        "server/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "dist-server",
        "src"
    ]
}